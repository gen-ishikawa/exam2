<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-12">
    <%= alert %>

    <h3>メールでログイン</h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
      </div>
      
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :内容を記憶させる %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-warning btn-block" %>
      </div>
    <% end %>

    <br>
    <h3>SNSでログイン</h3>
    <div class="btn btn-block btn-social btn-facebook">
      <span class="fa fa-facebook"></span>
      <%= link_to "Facebook でログイン", omniauth_authorize_path(resource_name, :facebook) %>
    </div>
    
    <div class="btn btn-block btn-social btn-twitter">
      <span class="fa fa-twitter"></span>
      <%= link_to "Twitter でログイン", omniauth_authorize_path(resource_name, :twitter) %>
    </div>
  </div>
</div>
