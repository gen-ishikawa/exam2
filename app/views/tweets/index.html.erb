<div class="container">
  <div class="row">
    <div class="col-md-12 col-sm-12">
      <p><%= notice %></p>
      <h1>トピック一覧</h1>
      <%= link_to "投稿", new_tweet_path, class: 'btn btn-primary' %>
      <% @tweets.reverse_each do |tweet| %>
       <div class="wrapper">
         <p>
           <%= profile_img(tweet.user) %>
           <%= tweet.user.name %>が投稿しました
         </p>
         <p><%= image_tag tweet.image_url %></p>
         <p class="left"><%= tweet.content %></p>
         <p class="right">
            <%= link_to "詳細", tweet_path(tweet), class: 'btn btn-default btn-sm btn-success' %>
            <% if current_user.id == tweet.user_id %>
              <%= link_to "編集", edit_tweet_path(tweet.id), class: 'btn btn-default btn-sm btn-info' %>
              <%= link_to "削除", tweet_path(tweet.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-warning' %>
            <% end %>
            <strong>作成時間:</strong>
            <%= tweet.created_at.strftime("%y/%m/%d %p %l:%M") %>
         </p>
       </div>
      <% end %>
    </div>
  </div>
</div>
  
