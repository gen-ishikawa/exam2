<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">
  <h2>ユーザー詳細</h2>
    <div class="row">
      <p><%= profile_img(@user) %></p>
      <strong><%= @user.name %></strong>
      <p><%= @user.email %></p>
    </div>
    <div class="row">
        <h4><strong>フォロー一覧</strong></h4>
        <% @user.followed_users.each do |user| %>
          <%= profile_img(user) %>
          <strong><%= user.name %></strong>
          <p><%= user.email %></p>
        <% end %>
    </div>
    <div class="row">
        <h4><strong>フォロワー一覧</strong></h4>
        <% @user.followers.each do |user| %>
          <%= profile_img(user) %>
          <strong><%= user.name %></strong>
          <p><%= user.email %></p>        
        <% end %>
   </div>
 </div>
</div>
